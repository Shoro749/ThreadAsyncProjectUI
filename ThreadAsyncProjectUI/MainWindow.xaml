<Window x:Class="ThreadAsyncProjectUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ThreadAsyncProjectUI"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Label x:Name="lb" Margin="200 25" Content = "Winner: ..." FontFamily="Arial" FontSize="36" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        <Label Content="Horse 1" FontFamily="Arial" Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Top" FontSize="18"/>
        <ProgressBar x:Name="horse1" Grid.Row="1" Margin="20 35"/>
        <Label Content="Horse 2" FontFamily="Arial" Grid.Row="2" HorizontalAlignment="Center" VerticalAlignment="Top" FontSize="18"/>
        <ProgressBar x:Name="horse2" Grid.Row="2" Margin="20 35"/>
        <Button x:Name="button" Grid.Row="3" Margin="200 32" Content="Start" FontFamily="Arial" FontSize="22" Click="Button_Click"/>
    </Grid>
</Window>
